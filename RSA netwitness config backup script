import os
import time


timestr = time.strftime("%d%m%Y-%H%M%S")
new_backup_file_name = 'NWSA_Backup_files_' + timestr
os.mkdir(new_backup_file_name)
os.chdir(f'./{new_backup_file_name}')

#backup process
backup_cmd = f'echo Login@123 | sudo nw-recovery-tool --export --dump-dir ./ --category AdminServer'
os.system(backup_cmd)
parent_dir_cmd = 'cd ..'
os.system(parent_dir_cmd)
